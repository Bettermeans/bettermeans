<!-- <h1><%#=l(:label_overview)%></h1>  -->
	
<div class="splitcontentleft">
  
  <% if @motions.any? %>
  <h2><%=l(:label_motions_active)%></h2>  
  <div class="motions gt-content-box">
    <%= render :partial => 'motions/motions', :collection => @motions %>
  </div>  
  <div class="gt-table-buttons">
		<%= link_to l(:label_motions_view_all), {:controller => 'motions', :action => 'index', :project_id => @project} , :class => "gt-btn-blue-large" %>
	</div>
  <% end %>
  
  <% if @subprojects.any? %>
  <h2 class="gt-table-head"><%=l(:label_subproject_plural)%></h2>
	<div class="gt-content-box">    
    <table border="0" class="gt-table gt-user-table">
 	      <% @subprojects.each do |p| %>
 	      <tr><td>
 	      <%= link_to(h(p), :action => 'show', :id => p)  %>
 	        <% array = p.activity_line_show(40) %>
 	        </td><td>
 	        <span class="spark right" max="<%=  p.activity_line_max %>"><%= p.activity_line_show(40) %></span>
 	        </td></tr>
 	      <% end %>
    </table>
  </div>
  <div class="gt-table-buttons">
  </div>
  <% end %>
  
  <% if @news.any? && authorize_for('news', 'index') %>
  <h2 class="gt-table-head"><%=l(:label_news_latest)%></h2>  
  <div class="news gt-content-box">
    <table border="0" class="gt-table gt-user-table">
			<tbody>
	      <%= render :partial => 'news/news', :collection => @news %>
	    </tbody>
	  </table>
  </div>  
  <div class="gt-table-buttons">
		<%= link_to l(:label_news_view_all), {:controller => 'news', :action => 'index', :project_id => @project} , :class => "gt-btn-blue-large" %>
	</div>
  <% end %>
  

  <% if @project.enterprise? %>
    <%= render :partial => "member_box" %>
  <% else %>
    <%= render :partial => "active_member_box" %>
  <% end %>
</div>

<div class="splitcontentright">
  <h2 class="gt-table-head"><%=l(:label_activity_latest)%></h2>  
  <div class="activity gt-content-box">
    <%= render :partial => 'activity_streams/activity_stream_list', :locals => {:activities_by_item => @activities_by_item} %>
  </div>
  <div class="gt-table-buttons">
    <%= link_to l(:label_activity_view_all), {:controller => 'projects', :action => 'activity', :project_id => @project}, :class => "gt-btn-blue-large" %>    
  </div>
  
</div>

<% content_for :sidebar do %>
<h2 class="gt-table-head">&nbsp;</h2>

<div class="gt-sidebar-nav gt-sidebar-nav-blue">
  <h3>Quick Links</h3>
  <ul>
  <li>
    <%= link_to l(:label_dashboard), {:controller => :projects, :action => :dashboard, :id => @project} %>
  </li>
	<% if User.current.allowed_to?(:add_subprojects, @project) %>
	<li>
		<%= link_to l(:label_subproject_new), {:controller => 'projects', :action => 'add', :parent_id => @project} %>
	</li>
	<% end %>
	<li>
  <%= link_to_if_authorized l(:label_motions_new), {:controller => 'motions', :action => 'new', :project_id => @project} %>
  </li>
  </ul>
</div>
<br><br>
<div class="gt-sidebar-content">
<h3><%=l(:label_project_description)%></h3>
<%= textilizable @project.description %>	
<% unless @project.homepage.blank? %><%=l(:field_homepage)%>: <%= link_to(h(@project.homepage), @project.homepage) %><% end %>
</div>
<br><br>
<div class="gt-sidebar-content">
<h3>3-month Activity Timeline</h3>
<div class="spark" max="<%= @project.activity_line_max %>"><%= @project.activity_line_show(70) %></div>
</div>
<br><br>
<% if User.current.allowed_to?(:view_issues, @project) %>
    <div class="gt-sidebar-nav gt-sidebar-nav-gray">
    <h3><%=l(:label_issue_tracking)%></h3>
    <ul>
            <% for tracker in @trackers %>    
              <li><span style="float:right;width:70%">
                  <%= link_to l(:label_x_open_issues_abbr_on_total, :count => @open_issues_by_tracker[tracker].to_i,
									:total => @total_issues_by_tracker[tracker].to_i), :controller => 'issues', :action => 'index', :project_id => @project, 
                                                        :set_filter => 1, 
                                                        "tracker_id" => tracker.id %></span>
									<span style="width:30%;"<%= link_to tracker.name, :controller => 'issues', :action => 'index', :project_id => @project, 
                                                        :set_filter => 1, 
                                                        "tracker_id" => tracker.id %></span>
          		</li>
            <% end %>
    </ul>
    </div>
    <div class="gt-table-buttons">
      <%= link_to l(:label_issue_view_all), {:controller => 'projects', :action => 'dashboard', :project_id => @project}, :class => "gt-btn-blue-medium right" %>
    </div>
    <% end %>
    
    <div class="gt-sidebar-content">
    <h3><%= l(:label_dpp_scale) %><%= help_bubble :help_dpp %></h3>
    <p><%= render :partial => 'point_scale', :locals => { :dpp => @project.dpp.round } unless @project.dpp.nil? %></p>
    </div>
    
<% end %>

<% content_for :header_tags do %>
<%= auto_discovery_link_tag(:atom, {:action => 'activity', :id => @project, :format => 'atom', :key => User.current.rss_key}) %>
<% end %>

<% html_title(l(:label_overview)) -%>

<script>
  $('document').ready(function(){
    display_sparks();
  });
</script>
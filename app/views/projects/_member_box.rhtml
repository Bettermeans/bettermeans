<!-- Shows enterprise members -->
<% 
@users_by_role = @project.root.users_by_role
if @users_by_role.any? 
  %>
<div class="members gt-content-box">
	<h3 class="icon22 icon22-users"><%=l(:label_team)%></h3>	
	<p><% @users_by_role.keys.sort.each do |role| %>
	<%=h role %>: <%= @users_by_role[role].sort.collect{|u| link_to_user u}.join(", ") %><br />
	<% end %></p>
	<p><%= link_to l(:label_team_view_all), :controller => 'projects', :action => 'team', :id => @project %></p>    
</div>
<% end %>
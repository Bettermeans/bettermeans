<tr>
  <td class="gt-avatar">
    <%= avatar(as.actor_email, :size => "24") %>
    
    </td>
    <td>
    <span class="author"><%= link_to as.actor_name, self.send("#{as.actor_type.downcase}_path", as.actor_id) %></span>
    <span class='verb'><%= as.verb.tr('_', ' ') %> this.</span>
      <% if as.indirect_object_id -%>
        <%= render :partial => 'activity_streams/indirect_object', :locals => {:as => as} %>
      <% end %>
  </td>
  <td style="width:20%">
		<!-- Categories Sub Table -->
		<table border="0" class="gt-table-categories">
			<tr>
				<td><%= since_tag(as.updated_at) %> ago</td>
			</tr>
			<% if as.count > 1 %>
			<tr>
				<td><%= action_times(as.count) %></td>
			</tr>
			<% end %>
		</table>
  </td>
  
</tr>
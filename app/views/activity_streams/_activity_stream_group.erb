    <table class="gt-table gt-user-table activity-sub" id="comments_table_<%= asg[0].object_id %>">
      <tbody>
      <% for as in asg.to_a.reverse %>
        <%= render :partial => 'activity_streams/activity_stream_sub', :locals => {:as => as} %> 
      <% end unless asg.length == 1 && !asg[0].indirect_object_id %>
      </tbody>
    </table>

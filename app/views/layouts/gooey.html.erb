<%= javascript_include_tag  'jquery.scrollTo-min' %>
<%= javascript_include_tag  'jquery.fancybox-1.3.4.pack' %>
<%= javascript_include_tag  'jquery.sparkline.min' %>
<%= javascript_include_tag  'store' %>
 



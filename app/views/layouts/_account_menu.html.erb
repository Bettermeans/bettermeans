<% if User.current.logged? %>
<%= render :partial => "notifications/unresponded" %>
  <%= link_to_user(User.current, :format => :username) %>
  <span class="gt-util-separator">|</span>
  <%= link_to l('label_my_account'), {:controller => :my, :action => :account} %>
  <span class="gt-util-separator">|</span>
  <%= link_to l('label_logout'), :signout %>
<% else %>
  <%= link_to "home", :home %>
  <span class="gt-util-separator">|</span>
  <%= link_to :login, :signin %>
  <span class="gt-util-separator">|</span>
  <%= link_to "sign up", {:controller => :account, :action => :register} %>
<% end %>
<span class="gt-util-separator">|</span>
<a href="http://help.bettermeans.com" target="blank"><%= l(:label_help) %></a>

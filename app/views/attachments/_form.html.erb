<div id="attachments_form_link">
  <a href="#" class="icon icon-attachment" onclick="$('#attachments_form_details').show();$('#attachments_form_link').hide();return false;">Attach files</a>
</div>
<div id="attachments_form_details" class="hidden">
  <span id="attachments_fields">
  <%= file_field_tag 'attachments[1][file]', :size => 30  -%>
  <%= text_field_tag 'attachments[1][description]', '', :size => 60 %>
  <em><%= l(:label_optional_description) %></em>
  </span>
  <br />
  <small><%= link_to l(:label_add_another_file), '#', :onclick => 'addFileField(); return false;' %>
  (<%= l(:label_max_size) %>: <%= number_to_human_size(Setting.attachment_max_size.to_i.kilobytes) %>)
  </small>
</div>
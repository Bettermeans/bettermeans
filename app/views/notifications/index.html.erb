<h2 class="gt-table-head icon22 icon22-projects"><%=l(:label_notifications)%></h2>
<div class="gt-content-box">
<table border="0" class="gt-table gt-user-table">
  <tbody>
    <% if @notifications.empty? %>
    <p class="nodata"><%= l(:label_no_data) %></p>
    <% else %>
      <% @notifications.each do |@notification| %>
          <%= render :partial => @notification.variation, 
                    :locals => @notification.params %>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<!-- Notification partial for a commit request offer -->
<div class="Notification Notification-commit-request-offer" id="Notification_<%= notification_id %>">
  <%= avatar_from_id(sender_id) %>
  <h4><%= l(:label_commitment_request) %></h4>
  <%= link_to_user_from_id(sender_id) %> is asking for ownership of an issue you <%= is_recipient_owner ? 'own' : 'added'%>:<br>   <!-- TODO: change these words to labels in yml -->
  <%= link_to_issue_from_id(issue_id,issue_subject) %> <br>
  <%= l(:label_commitment) + ": " + day_label(cr_days) %> <br>
  <%= 
  link_to_remote(l(:button_request_commitment_accept), {:url => user_commit_request_path(:id => cr_id, :format => :js, :user_id => sender_id, :issue_id => issue_id, :response => 2, :responder_id => User.current.id, :notification_id => notification_id), :method => 'put'}, {:id =>'cr_button', :class => 'icon icon-cr-accept'})
  %>
  <%=
  link_to_remote(l(:button_request_commitment_decline), {:url => user_commit_request_path(:id => cr_id, :format => :js, :user_id => sender_id, :issue_id => issue_id, :response => 3, :responder_id => User.current.id, :notification_id => notification_id), :method => 'put'}, {:id =>'cr_button', :class => 'icon icon-cr-decline'})
  %>
  <%=
  link_to_remote(l(:button_ignore), {:url => {:controller => "notifications", :action => "hide", :notification_id => notification_id}, :method => 'put'}, {:id =>'cr_button', :class => 'icon icon-cr-ignore'})
  %>
</div>
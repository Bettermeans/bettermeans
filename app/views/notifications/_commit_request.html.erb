<!-- Notification partial for a commit request (i.e. someone is asking for ownership of an issue) -->
<div class="notification notification-commit-request" id="notification_<%= notification_id %>">
<table>
  <tr>
    <td style="vertical-align: top; padding: 23px 10px 0px 0px">
    <%= avatar_from_id(sender_id) %>
    </td>
    <td>
<h4><%= l(:label_commitment_request) %> : <%= link_to_issue_from_id(issue_id,issue_subject) %> </h4>
<h5><%= l(:label_requested_by, :author => link_to_user_from_id(sender_id), :age => time_tag(notification_created_at)) %></h5>
<%= link_to_user_from_id(sender_id) %> <%= l(:text_is_asking_ownership_for) %> <%= is_recipient_owner ? 'own' : 'added'%><br>
<%= l(:label_commitment) + ": " + day_label(cr_days) %> <br><br>
<%= link_to_remote(l(:button_request_commitment_accept), {:url => user_commit_request_path(:id => cr_id, :format => :js, :user_id => sender_id, :issue_id => issue_id, :response => 2, :responder_id => User.current.id, :notification_id => notification_id), :method => 'put'}, {:id =>'cr_button', :class => 'icon icon-cr-accept'})%>
<%= link_to_remote(l(:button_request_commitment_decline), {:url => user_commit_request_path(:id => cr_id, :format => :js, :user_id => sender_id, :issue_id => issue_id, :response => 3, :responder_id => User.current.id, :notification_id => notification_id), :method => 'put'}, {:id =>'cr_button', :class => 'icon icon-cr-decline'})%>
<%= link_to_remote(l(:button_ignore), {:url => {:controller => "notifications", :action => "hide", :notification_id => notification_id, :message => :label_response_ignored}}, {:id =>'cr_button', :class => 'icon icon-cr-ignore'})%>
    </td>
    </tr>
    </table>

</div>